{
    "name": "rlje/rlje-wp",
    "description": "This is a RLJ Entertainment WordPress theme for Acorn TV and UMC TV",
    "type": "project",
    "homepage": "https://github.com/RLJEntertainment/rlje-wp",
    "authors": [
        {
            "name": "Tom Soisoonthorn",
            "email": "omnipresent_tom@hotmail.com",
            "homepage": "https://github.com/ubiquitous-tom"
        }
    ],
    "keywords": [
        "wordpress",
        "RLJ Entertainment"
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        },
        {
            "type": "package",
            "package": [
                {
                    "name": "wordpress/wordpress",
                    "type": "webroot",
                    "version": "5.0.3",
                    "dist": {
                        "type": "zip",
                        "url": "https://wordpress.org/wordpress-5.0.3-no-content.zip"
                    },
                    "require": {
                        "fancyguy/webroot-installer": "^1.0"
                    }
                }
            ]
        },
        {
            "type": "vcs",
            "url": "https://github.com/RLJEntertainment/rlje-api-wp-plugin"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ubiquitous-tom/wp-themes-composer"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ubiquitous-tom/wp-plugins-composer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "composer/installers": "~1.0",
        "oomphinc/composer-installers-extender": "~1.1",
        "koodimonni/composer-dropin-installer": "dev-master",

        "rljentertainment/rlje-api-wp-plugin": "dev-release/acorn-2.0-internal-v2",

        "wpackagist-plugin/classic-editor": "^0.4",
        "wpackagist-plugin/gutenberg": "^4.0",
        "wpackagist-plugin/jetpack": "^6.6",
        "wpackagist-plugin/redis-cache": "^1.3",
        "wpackagist-plugin/rewrite-rules-inspector": "^1.2",
        "wpackagist-plugin/w3-total-cache": "^0.9",
        "wpackagist-plugin/wonderm00ns-simple-facebook-open-graph-tags": "^2.2",
        "wpackagist-plugin/wp-super-cache": "^1.6",
        "wpackagist-plugin/wps-hide-login": "^1.4",

        "tsoisoonthorn/rlje-wp-theme": "dev-test",
        "tsoisoonthorn/rlje-wp-plugin": "dev-master",

        "wordpress/wordpress": "5.0.3"
    },
    "require-dev": {
        "wpackagist-plugin/debug-bar": "^0.9",
        "wpackagist-plugin/query-monitor": "^3.1",
        "wpackagist-plugin/wp-log-viewer": "^1.2"
    },
    "minimum-stability": "dev",
    "extra": {
        "webroot-dir": "wp",
        "webroot-package": "wordpress/wordpress",
        "installer-types": ["library"],
        "installer-paths": {
            "wp-content/": ["type:wordpress-dropin"],
            "wp-content/themes/rlje/": ["tsoisoonthorn/rlje-wp-theme"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"],
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin",
                "rljentertainment/rlje-api-wp-plugin",
                "tsoisoonthorn/rlje-wp-plugin"
            ]
        },
        "dropin-paths": {
            "wp-content/": [
                "type:wordpress-dropin",
                "package:wpackagist-plugin/redis-cache:includes/object-cache.php"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "RLJE\\": "src/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "RLJE\\Loader::postUpdate"
        ]
    }
}
